
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<div class="main">
    <div class="formMain bg-secondary w-75 my-5 p-5 rounded" style="direction: rtl; font-family: 'Jameel Noori Nastaleeq';">
        <h1 class="text-white text-center pb-3">کتاب کا اندراج کریں</h1>
        <form action="/addBook" method="post">
            <div class="d-flex flex-column gap-2 "  style="font-size: 28px;">
                <div class="d-flex flex-row gap-2">
                    <input class="form-control" style="font-size: 18px;" type="text" name="bookName" placeholder="کتاب کا نام" required>
                    <input class="form-control" type="text" name="authorName" placeholder="مصنف کا نام" required>
                </div>
                <div class="d-flex flex-row gap-2">
                    <input class="form-control" type="text" name="researcherName" placeholder="محقق کا نام" required>
                    <input class="form-control" type="text" name="publisherName" placeholder="پبلیشر" required>
                </div>
                <textarea class="form-control" type="text" name="description" placeholder="تعارف" required></textarea>
                
                <input class="form-control" type="text" name="imageUrl" placeholder="ٹائٹل کا لنک" required>
                <input class="form-control" type="text" name="pdfUrl" placeholder="پی ڈی ایف کا لنک" required>
                <div class="d-flex flex-row gap-2">
                    <input class="form-control" type="number" name="totalPages" placeholder="کُل صفحات" required>
                    <input class="form-control" type="text" name="category" placeholder="کیٹاگری" required>
                </div>
            </div>
            <button class="btn btn-primary w-100 mt-3" type="submit">کتاب شامل کریں</button>

        </form>

    </div>

</div>









