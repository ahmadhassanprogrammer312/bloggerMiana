<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container mt-5">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h3>User Profile</h3>
            </div>
            <div class="card-body">
                <!-- Personal Information Section -->
                 <div class="d-flex justify-content-between">
                    <div class="d-flex gap-3">

                        <section>
                            <img class="rounded" src=<%=user.profilePic%> alt="" width="180px" height="190px">
                        </section>
                         <section>
                             <h4>Personal Information</h4>
                             <p class="py-0 my-0"><strong>User Name:</strong> <%=user.userName%></p>
                             <p class="py-0 my-0"><strong>Full Name:</strong> <%=user.userfullName%></p>
                             <p class="py-0 my-0"><strong>Age:</strong> <%= user.age || " .... .... ...."%></p>
                             <p class="py-0 my-0"><strong>Location:</strong> <%= user.address || " .... .... ...."%></p>
                         </section>
                    </div>
                    <section>
                        
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                              Update
                            </button>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="/update/personalInfo/<%=user._id%>">Personal Information</a></li>
                              <li><a class="dropdown-item" href="/update/contactInfo/<%=user._id%>">Contact Information</a></li>
                              <li><a class="dropdown-item" href="/update/cred/<%=user._id%>">Credentials</a></li>
                              <li><hr class="dropdown-divider"></li>
                              <li><a class="dropdown-item btn-danger" href="#">Delete Account</a></li>
                            </ul>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                              Options
                            </button>
                            <ul class="dropdown-menu">
                              
                              <li><a class="dropdown-item" href="/update/cred/<%=user._id%>">Credentials Info</a></li>
                              <li><hr class="dropdown-divider"></li>
                              <li><a class="dropdown-item btn-danger" href="#">Delete Account</a></li>
                            </ul>
                          </div>
                          
                    </section>
                 </div>
                <hr>
                <!-- Contact Information Section -->
                <section>
                    <h4>Contact Information</h4>
                    <p><strong>Email:</strong> <%= user.userEmail || " .... .... ...."%></p>
                    <p><strong>Phone:</strong> <%= user.userPhone || " .... .... ...."%></p>
                </section>
                
                <hr>
                <!-- Enrolled Courses Section -->
                <section>
                    <h4>Enrolled Courses</h4>
                    <ul>
                        <li>Course 1: Introduction to Programming</li>
                        <li>Course 2: Advanced JavaScript</li>
                        <li>Course 3: Web Development with Bootstrap</li>
                    </ul>
                </section>
                <hr>
                <!-- Articles Section -->
                <section>
                    <h4>Articles</h4>
                    <ul>
                        <li>Article 1: Understanding JavaScript Closures</li>
                        <li>Article 2: A Guide to Responsive Web Design</li>
                        <li>Article 3: Tips for Writing Clean Code</li>
                    </ul>
                </section>
                <hr>
                <!-- Notes Section -->
                <section>
                    <h4>Notes</h4>
                    <ul>
                        <li>Note 1: Remember to review the Bootstrap documentation.</li>
                        <li>Note 2: Practice coding every day.</li>
                        <li>Note 3: Stay updated with the latest web development trends.</li>
                    </ul>
                </section>
            </div>
        </div>
    </div>

    
